<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldeGame.MainPage">

    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="10" Padding="20" BackgroundColor="LightBlue">

        <Image Source="your_logo.png" HorizontalOptions="CenterAndExpand" />

        <ImageButton Source="playbutton.png" Clicked="OnPlayButtonClicked" BackgroundColor="Transparent" WidthRequest="200" HeightRequest="50" />


        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="20">
            <Button Text="Button 1" WidthRequest="100" HeightRequest="50" BackgroundColor="Beige" FontSize="Large" />
            <Button Text="Button 2" WidthRequest="100" HeightRequest="50" BackgroundColor="Beige" FontSize="Large" />
            <Button Text="Button 3" WidthRequest="100" HeightRequest="50" BackgroundColor="Beige" FontSize="Large" />
        </StackLayout>

    </StackLayout>

</ContentPage>
